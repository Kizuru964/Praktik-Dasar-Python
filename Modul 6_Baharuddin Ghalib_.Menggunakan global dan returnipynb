   "source": [
    "skor = 0 \n",
    "def tambah_skor(poin):\n",
    "    # Kata kunci 'global' memberitahu Python bahwa kita ingin menggunakan 'skor' yang didefinisikan di luar fungsi (variabel global)\n",
    "    global skor\n",
    "    # Menambahkan nilai 'poin' ke variabel global 'skor'\n",
    "    skor += poin\n",
    "    # Mengembalikan nilai terbaru dari variabel 'skor'\n",
    "    return skor\n",
    "def kurangi_skor(poin):\n",
    "    # Mengakses variabel global 'skor' seperti pada fungsi sebelumnya\n",
    "    global skor\n",
    "    skor -= poin    \n",
    "    if skor < 0:\n",
    "        skor = 0\n",
    "    return skor \n",
    "\n",
    "# memanggil fungsi tambah_skor dengan parameter nilai 10\n",
    "# setelah baris ini dieksekusi, nilai 'skor' menjadi 10\n",
    "print(\"Bahar dapat 10 poin:\", tambah_skor(10))\n",
    "# memanggil fungsi tambah_skor dengan parameter atau nilai 5\n",
    "# nilai skor akan menjadi 10+5 = 15\n",
    "print(\"Bahar dapat 5 poin lagi, menjadi:\", tambah_skor(5))\n",
    "# memanggul fungsi kuraingi_skor dengan parameter atau nilai 7\n",
    "# nilai skor akan menjadi 15-7 = 8\n",
    "print(\"Bahar dikurangi 7 poin, menjadi:\", kurangi_skor(7))"
   ]
